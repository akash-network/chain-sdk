{
  "name": "@akashnetwork/chain-sdk",
  "version": "0.0.0",
  "type": "module",
  "description": "Akash API TypeScript client",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/akash-network/chain-sdk",
    "directory": "ts"
  },
  "license": "Apache-2.0",
  "author": "Akash Network Team",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.js"
    },
    "./web": {
      "types": "./dist/types/index.web.d.ts",
      "require": "./dist/cjs/index.web.cjs",
      "import": "./dist/esm/index.web.js"
    },
    "./private-types/*": {
      "types": "./dist/types/generated/protos/index.*.d.ts",
      "require": "./dist/cjs/generated/protos/index.*.cjs",
      "import": "./dist/esm/generated/protos/index.*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run compile:jwt-validator && rm -rf dist && tsc -p tsconfig.build.json && node esbuild.config.mjs && ./script/validate-package-exports.ts",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --selectProjects unit functional",
    "test:cov": "jest --selectProjects unit functional --coverage",
    "test:functional": "jest --selectProjects functional",
    "test:unit": "jest --selectProjects unit",
    "compile:jwt-validator": "node --experimental-strip-types --no-warnings ./script/compile-json-schema-to-ts.ts && eslint --fix src/sdk/provider/auth/jwt/validate-payload.ts"
  },
  "lint-staged": {
    "*.json": [
      "sort-json"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "./package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.2.3",
    "@connectrpc/connect": "^2.0.1",
    "@connectrpc/connect-node": "^2.0.1",
    "@cosmjs/amino": "^0.32.4",
    "@cosmjs/math": "^0.33.1",
    "@cosmjs/proto-signing": "^0.33.1",
    "@cosmjs/stargate": "^0.33.1",
    "js-yaml": "^4.1.0",
    "json-stable-stringify": "^1.3.0",
    "jsrsasign": "^11.1.0",
    "long": "^5.3.2"
  },
  "devDependencies": {
    "@bufbuild/protoc-gen-es": "^2.2.3",
    "@bufbuild/protoplugin": "^2.2.3",
    "@eslint/js": "^9.21.0",
    "@exodus/schemasafe": "^1.3.0",
    "@faker-js/faker": "^9.7.0",
    "@jest/globals": "^29.7.0",
    "@stylistic/eslint-plugin": "^4.0.1",
    "@types/dot-object": "^2.1.6",
    "@types/js-yaml": "^4.0.5",
    "@types/jsrsasign": "^10.5.15",
    "dot-object": "^2.1.5",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "immutability-helper": "^3.1.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^15.4.3",
    "sort-json": "^2.0.1",
    "sort-package-json": "^3.0.0",
    "ts-jest": "^29.2.6",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "ts-proto": "^2.7.7",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.29.1"
  },
  "engines": {
    "node": "22.14.0"
  },
  "volta": {
    "node": "22.14.0"
  }
}
